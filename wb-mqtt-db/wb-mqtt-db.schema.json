{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "MQTT History Configuration",

  "properties": {
    "debug": {
      "type": "boolean",
      "title": "Enable debug logging",
      "default": false,
      "_format": "checkbox",
      "propertyOrder": 1
    },
    "groups" : {
        "type" : "array",
        "title" : "Groups",
        "propertyOrder" : 2,

        "items" : {
            "type" : "object",
            "headerTemplate": "Group {{self.name}}",

            "options" : {
              "disable_properties" : true,
              "disable_edit_json" : true
            },

            "properties" : {
              "name": {
                "type": "string",
                "title": "Group name",
                "propertyOrder": 1
              },

              "channels" : {
                "type" : "array",
                "title" : "Channels",
                "_format" : "table",
                "propertyOrder" : 2,
                "items": { 
                  "type" : "string",
                  "title" : "MQTT topic pattern"
                },
                "options" : {
                  "disable_array_reorder" : true
                }

              },

              "values" : {
                "type" : "integer",
                "title" : "Number of values to store, per topic",
                "propertyOrder" : 3,
                "minimum" : 1
              },

              "values_total" : {
                "type" : "integer",
                "title" : "Number of values to store, per group",
                "propertyOrder" : 4,
                "minimum" : 1
              },

              "min_interval" : {
                "type" : "number",
                "title" : "Minimum time interval between two data points (s)",
                "description" : "History daemon will save at most 1 value per specified time interval",
                "propertyOrder" : 5,
                "minimum" : 0
              },

              "min_unchanged_interval" : {
                "type" : "number",
                "title" : "Minimum time interval between two data points with the same value (s)",
                "propertyOrder" : 6,
                "minimum" : 0
              }
          },
          "required": ["name", "channels"]
        }
    },
    "database" : {
        "type": "string",
        "title" : "DB file path",
        "default" : "/var/lib/wirenboard/db/data.db",
        "propertyOrder" : 3
    }    
  },

  "configFile": {
    "path": "/etc/wb-mqtt-db.conf",
    "service": "wb-mqtt-db"
  }
}
